<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Credentials.RegisterActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="67dp"
        android:text="Registrate"
        android:layout_marginTop="-50dp"
        android:textColor="@color/turque"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextDni"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/turque"
        android:hint="DNI"
        android:minHeight="48dp"
        android:textColor="@color/lead"
        android:textColorHint="@color/lead"

        android:textSize="14dp" />

    <EditText
        android:id="@+id/editTextNombres"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/turque"
        android:hint="Nombres"
        android:minHeight="48dp"
        android:textColor="@color/lead"
        android:textColorHint="@color/lead"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/editTextApellidos"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/turque"
        android:hint="Apellidos"
        android:minHeight="48dp"
        android:textColor="@color/lead"
        android:textColorHint="@color/lead"

        android:textSize="14dp" />

    <EditText
        android:id="@+id/editTextCelular"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/turque"
        android:ems="10"
        android:hint="Celular"
        android:inputType="phone"
        android:minHeight="48dp"
        android:textColor="@color/lead"
        android:textColorHint="@color/lead"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/editTextCorreo"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/turque"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColor="@color/lead"
        android:textColorHint="@color/lead"
        android:textSize="14dp" />


    <EditText
        android:id="@+id/editTextContrase単aReg"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/turque"
        android:ems="10"
        android:hint="Contrase単a"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="@color/lead"
        android:textColorHint="@color/lead"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/editTextConfirmarContrase単a"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/turque"
        android:ems="10"
        android:hint="Confirmar Contrase単a"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="@color/lead"
        android:textColorHint="@color/lead"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonRegistro"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:text="Registrarse" />

        <Button
            android:id="@+id/btnprueba"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:text="DB" />

        <ProgressBar
            android:id="@+id/rg_progress_bar"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>